

					{{> dashboard }}



					<main class="col bg-faded py-3">
						 <h2  class="dashboard-title py-3  ">Service Booked</h2>
						 <div class="card">
								 <div class="card-body">
								<form method="post" action="/search" class="card card-sm" autocomplete="on">

									 <div class="card-body row no-gutters align-items-center">

											<!--end of col-->
											<div class="col">
												 <input class="form-control form-control-sm" name="search" type="text" placeholder="customer name">
											</div>
											<!--end of col-->
										 <button class="btn btn-outline-secondary btn-sm search-bottom " type="submit">Search</button>
											<!--end of col-->
									 </div>
						 </form>


            <div class="table-responsive">

                   <table  class="table table-sm admin-booking">

                              <thead>
                                <tr>
                                  <th>Id</th>
                                  <th>Day</th>
                                  <th>Time</th>
                                  <th>Service</th>
                                  <th>Customer</th>
                                  <th>When</th>



                                </tr>
                              </thead>{{#each search }}
                              <tbody>
                                <tr>
                                  <td>{{id}} </td>
                            <td>{{this.selected_day}}</td>
                            <td>{{this.selected_times}}</td>
                            <td>{{this.service_title}}</td>
                            <td>{{this.customer_name}}</td>
                            <td>{{timeago created_at}}</td>





                                </tr>  {{/each}}



															</tbody>
												 	 </table>

												 </div></div>
												 		 </main>
												 		</div>
													</div>
