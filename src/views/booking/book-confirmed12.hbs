        <td>{{this.service_title}}</td>
        <td>{{this.customer_name}}</td>
        <td>{{this.staff_name}}</td>
        <td class="text-muted">{{timeago created_at}}</td>
        <td>
            <a href="delete-booking/{{id}}" onclick="return confirm('Are You Sure?')"><i class="fas fa-trash"></i>Delete</a><br>
              <a href="booking/"><i class="fas fa-trash"></i>Rebook</a>

        </td>

      </tr>

{{else}}
<div class="col mx-auto">

  <h3 class="p-3">There are no booking saved yet</h3>
  <a href="/booking">Booking</a>
