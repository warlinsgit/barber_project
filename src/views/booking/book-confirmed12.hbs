


<div class="container p-4">
<div class="row">

<div class="col-md-6 mx-auto">

<h3 class="text-info">Hello: {{user.email}}</h3>
<br>
<h4>Book History</h4>
<br>


      <table  class="table table-striped table-bordered" width="100%">

    <thead>
      <tr>
        <th>Booking Id</th>
        <th>Day</th>
        <th>Time</th>
        <th>Service</th>
        <th>Customer Name</th>
          <th>Staff Name</th>
        <th>When</th>
        <th>Action</th>

      </tr>
    </thead>{{#each staffa }}
    <tbody>
      <tr>
        <td>{{this.id}} </td>
        <td>{{this.selected_day}} </td>
