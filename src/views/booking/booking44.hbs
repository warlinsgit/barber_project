<div class="container py-4">
<div class="row">

<div class="col-md-6 mx-auto"  style="background:rgba(191, 202, 205, 0.67);">

   <h4 class="py-3 text-center text-secondary">Make a Booking</h4>


<form action="/customer_book" method="post">




    <div class="form-group" >
      <label for="chose-date">Choose day available</label>

              <input data-date-format="dd/mm/yyyy"  name="selected_day" class="form-control" value="{{selected_day}}" readonly>

    </div>

    <div class=" form-group ">

    <label for="service_title">Select Service</label>

      <select class="custom-select custom-select-lg" name="service_title"  class="form-control">

                   <option value="{{  service_title}}"> {{ service_title}}</option>

                 </select>


    </div>


    <div class=" form-group ">
      <label for="staff_name">Professional</label>
      <select class="custom-select custom-select-lg" name="staff_name" class="form-control">

                   <option>{{staff_name}}</option>

                 </select>

    </div>

<input type="hidden" name="staff_id" value="{{staff_id}}">


<div class="form-group">

<label for="selected_times">Select Time</label>

  <select class="custom-select custom-select-lg" name="selected_times" >


               <option >{{days_available}}</option>

             </select>

</div>



<input type="hidden" name="client_id" value="{{user.id}}" readonly>
<input type="hidden" name="created_at" value="{{timeago created_at}}">
<input type="text" name="id_slot" value="{{id_slot}}">


<div class="form-group text-right">
  <a value="Cancel" onclick="cancel2()" class="btn btn-primary text-white"><i class="fa fa-arrow-circle-left"></i> Previous</a>
  <button type="submit" class="btn btn-primary"> Next <i class="fa fa-arrow-circle-right"></i></button>

</div>


</form>

</div>
</div>
</div>



</div>

 <script src="./js/previous_booking.js" charset="utf-8"></script>
