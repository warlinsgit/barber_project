<div class="container py-4">
<div class="row">

<div class="col-md-6 mx-auto"  style="background:rgba(191, 202, 205, 0.67);">

    <h4 class="py-3 text-center text-secondary">Make a Booking</h4>

<form action="/booking2" method="post">




    <div class="form-group" >
      <label for="chose-date">Choose Day</label>

            <input data-date-format="dd/mm/yyyy" id="datepicker" name="selected_day" class="form-control">

    </div>

    <div class=" form-group ">

    <label for="service_title">Select Service</label>

      <select class="custom-select custom-select-lg" name="service_title" class="form-control">
    {{#each services}}
                   <option value="{{title}}"> {{title}}</option>

    {{/each}}
                 </select>


    </div>



<input type="hidden" name="client_id" value="{{user.id}}" readonly>
<input type="hidden" name="created_at" value="{{timeago created_at}}">




<div class="form-group text-right ">
    <button type="submit" class="btn btn-primary"> Next <i class="fa fa-arrow-circle-right"></i></button>

</div>


</form>

</div>

</div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>




<script type="text/javascript">

var date = new Date();
date.setDate(date.getDate());
    $('#datepicker').datepicker({

      startDate: date,
      daysOfWeekDisabled: [0]

    });
    $('#datepicker').datepicker("setDate", new Date());



</script>


</div>
