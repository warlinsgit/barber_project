<div class="container p-4">
<div class="row">

<div class="col-md-6 mx-auto">

<form action="/booking" method="post">

    <div class="form-group" >
      <label for="chose-date">Choose day available</label>
            <input data-date-format="dd/mm/yyyy" id="datepicker" name="selected_day" class="form-control">

    </div>





<div class="form-group">

<label for="selected_times">Select Time</label>

  <select class="custom-select custom-select-lg " name="selected_times">

               <option value="2:00pm"> 2:00pm</option>
               <option value="2:30pm"> 2:30pm </option>
               <option value="3:00pm"> 3:00pm </option>
               <option value="3:30pm"> 3:30pm</option>
               <option value="4:00pm "> 4:00pm </option>
               <option value="4:30pm "> 4:30pm </option>
               <option value="5:00pm"> 5:00pm </option>
               <option value="5:30pm"> 5:30pm </option>
               <option value="6:00pm"> 6:00pm</option>
               <option value=" 6:30pm"> 6:30pm </option>
               <option value=" 7:00pm"> 7:00pm </option>
               <option value=" 8:00pm"> 8:00pm</option>
             </select>

</div>




<div class=" form-group ">

<label for="service_title">Select Service</label>

  <select class="custom-select custom-select-lg" name="service_title" class="form-control">
{{#each services}}
               <option value="{{title}}"> {{title}}</option>


{{/each}}
             </select>


</div>




<div class=" form-group ">
  <label for="staff_name">Professional</label>
  <select class="custom-select custom-select-lg" name="staff_name" class="form-control">
{{#each staff}}
               <option value="{{full_name}}">{{full_name}}</option>
{{/each}}

             </select>

</div>








<div class="form-group">
  <button type="submit" class="btn btn-primary">Book</button>
</div>


</form>

{{#each rows}}

{{rows.staff_name}}
{{selected_times}}

{{/each}}

</div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>



<script type="text/javascript">
    $('#datepicker').datepicker({
        weekStart: 1,
        daysOfWeekHighlighted: "0",
        autoclose: true,
        todayHighlight: true,
    });
    $('#datepicker').datepicker("setDate", new Date());
</script>
