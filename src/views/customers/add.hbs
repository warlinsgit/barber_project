<div class="container p-4">
<div class="row">
   <div class="col-md-6 mx-auto">
      <form action="/customers/add"  method="post">
         <div class="form-group">
            <label for="userc_id" class="mb-2 mr-sm-2">User Id:</label>
            <input type="text"class="form-control mb-2 mr-sm-2" name="userc_id" value="{{user.id}}" readonly>
            <label for="fullnam" class="mb-2 mr-sm-2">Full Name:</label>
            <input type="text" name="fullname" class="form-control mb-2 mr-sm-2" class="form-control" value="{{user.fullname}}" readonly >
         </div>
         <div class="form-group">
            <label for="title">Address:</label>
            <input type="text" class="form-control" name="address" placeholder="Address" autofocus >
         </div>
         <div class="form-group">
            <label for="city">City</label>
