               <option value="Dublin">Dublin</option>
               <option value="Cork">Cork</option>
               <option value="Galway">Galway</option>
               <option value="Limerick">Limerick</option>
               <option value="Waterford">Waterford</option>
               <option value="Dundalk">Dundalk</option>
               <option value="Drogheda">Drogheda</option>
               <option value="Navan">Navan</option>
               <option value="Navan">Navan</option>
            </select>
         </div>
         <div class="form-group  ">
            <div class="form-group col-xs-2 ">
               <label for="name">Mobile</label>
               <input type="text" class="form-control " placeholder="Mobile number" name="mobile" >
            </div>
            <div class="form-group">
               <label for="title">Age</label>
               <input type="text" class="form-control" name="age" placeholder="Age" autofocus>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </div>
   </div>
</div>
