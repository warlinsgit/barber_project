{{> dashboard }}
<main class="col bg-faded py-5">
   <h2 class="dashboard-title " >Edit Service</h2>
   <div class="card">
      <div class="card-body">
         <form action="/services/edit/{{services.id}}"  method="post">
            <div class="form-group">
               <label for="title" class=" col-form-label">Service Title*</label>

                  <input  name="title" placeholder="Service Title" class="form-control w-75" value="{{services.title}}" type="text" autofocus>

            </div>
            <div class="form-group">
               <label for="description" class=" col-form-label">Description</label>

                  <textarea name="description" cols="40" rows="4" class="form-control w-75">{{services.description}}</textarea>

            </div>
            <div class="form-group">
               <label for="price" class=" col-form-label">Price</label>

                  <input  name="price" placeholder="Price" class="form-control w-25" value="{{services.price}}" type="text">

            </div>
            <div class="form-group">

                  <button name="submit" type="submit" class="btn btn-outline-success btn-sm">Submit</button>

            </div>
         </form>
         </form>
      </div>
   </div>
</main>
</div>
</div>
